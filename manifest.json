{
    "name": "Slay",
    "version": "1.0",
    "description": "Parse website to make a playlist that is so slay.",
    "manifest_version": 2,
    "permissions": [
        "webNavigation",
        "declarativeContent",
        "storage",
        "*://open.spotify.com/*",
        "tabs",
        "identity"
    ],
    "background": {
        "scripts": ["app/background.js"]
    },
    "browser_action": {
        "default_popup": "app/popup.html",
        "default_icon": {
            "16": "img/icon16.png"
        },
        "default_title": "Playlist time babe!"

    },
    "icons": {
        "16": "img/icon16.png"
    }
}